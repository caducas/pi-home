doctype html
html
   head
      title= Sites
      link(rel='stylesheet', href='/css/bootstrap.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      script(src="/socket.io/socket.io.js")
   body
      include navigation
      div.container
         div#sitesList
         div#addNewSite
            input(type='button' class='btn btn-default' value='New Site')#newSite
         div(class='col-lg-6')#siteConfig
            div(class='well')
               form(class='bs-example form-horizontal')
                  fieldset
                     legend Configuration
                     div(class='form-group')
                        label(class='col-lg-2 control-label' for='txtName') Name
                        div(class='col-lg-10')
                           input(type='text' id='txtName' value='' class='form-control')
                     div(class='form-group')
                        label(class='col-lg-2 control-label' for='txtDescription') Description
                        div(class='col-lg-10')
                           input(type='text' id='txtDescription' value='' class='form-control')
                     div#containersList
                     table(class='table table-striped table-bordered table-hover')
                        tbody
                           tr
                              td
                                 div#divSelectContainerName
                              td
                                 input(type='button' class='btn btn-default' value='Add' onclick='addContainer()')
                     div(class='form-group')
                        div(class='col-lg-10')                        
                           input(type='button' class='btn btn-default' value='Cancel')#cancelSite
                           input(type='button' class='btn btn-default' value='Save')#saveSite
                           input(type='button' class='btn btn-default' value='Remove')#removeSite   
   script(src="/javascripts/sites.js")
