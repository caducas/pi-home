doctype 5
html
   head
      title= Eventgroups
      link(rel='stylesheet', href='/css/bootstrap.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      script(src="/socket.io/socket.io.js")
   body
      include navigation
      div.container
         div#eventGroupList
         div#addNewEventGroup
            input(type='button' class='btn btn-default' value='New Eventgroup')#newEventGroup
         div(class='col-lg-6')#eventGroupConfig
            div(class='well')
               form(class='bs-example form-horizontal')
                  fieldset  
                     legend Configuration
                        input(type='button' class='btn btn-default pull-right' value='Remove')#removeEventGroup
                        input(type='button' class='btn btn-default pull-right' value='Save')#saveEventGroupConfig
                        input(type='button' class='btn btn-default pull-right' value='Cancel')#cancelEventGroupConfig
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtEventGroupId') Eventgroup-ID
                        div(class='col-lg-10')
                           input(type='text' id='txtEventGroupId' value='' class='form-control')
                     legend Events
                     div#eventList
                     table(class='table table-striped table-bordered table-hover')
                        tbody
                           tr
                              td
                                 div#divSelectListenerName
                              td
                                 div#divSelectConditionName
                              td
                                 input(type='text' id='inputTimeDifference' value='' class='form-control' default='0')
                              td
                                 input(type='button' class='btn btn-default' value='Add' onclick='addEvent()')
                     legend Taskgroups
                     div#taskGroupList
                     table(class='table table-striped table-bordered table-hover')
                        tbody
                           tr
                              td
                                 div#divSelectTaskGroupName
                              td
                                 input(type='button' class='btn btn-default' value='Add' onclick='addTaskGroup()')

   script(src="/javascripts/eventgroups.js")