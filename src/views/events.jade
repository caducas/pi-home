doctype 5
html
   head
      title= Tasks
      link(rel='stylesheet', href='/css/bootstrap.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      script(src="/socket.io/socket.io.js")
   body
      include navigation
      div.container
         div#eventList
         div(class='col-lg-6')#eventGroupConfig
            div(class='well')
               form(class='bs-example form-horizontal')
                  fieldset  
                     legend Configuration
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerName') Name
                        div(class='col-lg-8')
                           input(type='text' id='txtListenerName' value='' class='form-control')
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerIp') IP
                        div(class='col-lg-8')
                           input(type='text' id='txtListenerIp' value='' class='form-control')
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerPlugin') Plugin
                        div(class='col-lg-8')
                           div#plugin
                     legend Conditions
                     div#conditionList
                        table(class='table table-striped table-bordered table-hover')
                           tbody
                              tr
                                 td
                                    input(type='text' id='inputListenerName' value='' class='form-control')
                                 td
                                    select(class='form-control pull-right' id='selectConditionOperator')
                                       option =
                                       option >
                                       option <
                                       option >=
                                       option <=
                                 td
                                    input(type='text' id='inputConditionValue' value='' class='form-control')
                                 td
                                    input(type='button' class='btn btn-default' value='Add' onclick='addCondition()')
                     legend Plugin-Params
                     div#pluginParams
                        include plugins/eventListener
                     div(class='form-group')
                        div(class='col-lg-10')
                           input(type='button' class='btn btn-default' value='Save')#saveEventListenerConfig
                           input(type='button' class='btn btn-default' value='Cancel')#cancelEventListenerConfig
   script(src="/javascripts/events.js")
