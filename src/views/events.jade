doctype html
html
   head
      title= Tasks
      meta(name='mobile-web-app-capable' content='yes')
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/pihome.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      script(src="/socket.io/socket.io.js")
   body
      include navigation
      div.container
         div#eventList
         div#addNewEvent
            input(type='button' class='btn btn-default' value='New event')#addNewEvent
         div(class='col-lg-6')#eventGroupConfig
            div(class='well')
               form(class='bs-example form-horizontal')
                  fieldset  
                     legend
                        input(type='text' value='Event-Name' class='form-control config-title-input')#txtListenerName
                        input(type='button' class='btn btn-default pull-right config-button' value='Cancel')#cancelEventListenerConfig
                        input(type='button' class='btn btn-default pull-right config-button' value='Save')#saveEventListenerConfig
                        input(type='button' class='btn btn-default pull-right config-button' value='Remove')#removeEventListenerConfig
                        &nbsp;
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerIp') IP
                        div(class='col-lg-8')
                           input(type='text' id='txtListenerIp' value='' class='form-control')
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerVariable') Variable
                        div(class='col-lg-8')
                           input(type='text' id='txtListenerVariable' value='' class='form-control')
                     div(class='form-group')
                        label(class='col-lg-3 control-label' for='txtListenerPlugin') Plugin
                        div(class='col-lg-8')
                           div#plugin
                     legend Conditions
                     div(class='config-content')#conditionList
                     legend Plugin-Params
                     div#pluginParams
                        include eventListener
   script(src="/javascripts/events.js")
